<view class="goods-item" bindtap="itemTap">
    <image class="image" src="{{goodsitem.image||goodsitem.img||goodsitem.show.img}}" mode='widthFix' />
    <view class="item-info">
        <view class="title">{{goodsitem.title}}</view>
        <view class="info">
          <text class="price">${{goodsitem.price}}</text>
          <image class="icon" src="/assets/common/favor.png" />
          <text class="cfav">{{goodsitem.cfav}}</text>
        </view>
    </view>
</view>
